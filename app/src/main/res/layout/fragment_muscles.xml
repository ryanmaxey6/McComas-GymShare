<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ivMuscles"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/tvMuscles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="81dp"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="81dp"
        android:text="Muscle Groups"
        android:textColor="@color/chi_maroon"
        android:textSize="28sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="580dp"
        android:layout_below="@+id/tvMuscles"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginTop="19dp"
        android:layout_marginEnd="42dp"
        app:srcCompat="@drawable/muscle" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="126dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMuscles"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="-9dp"
        android:layout_marginTop="37dp"
        android:text="Back/Shoulders" />

    <Button
        android:id="@+id/buttonChest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvMuscles"
        android:layout_marginStart="82dp"
        android:layout_marginTop="82dp"
        android:layout_toEndOf="@+id/buttonBack"
        android:text="Chest" />

    <Button
        android:id="@+id/buttonArms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonBack"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="-32dp"
        android:layout_marginTop="92dp"
        android:text="Arms" />

    <Button
        android:id="@+id/buttonAbs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonChest"
        android:layout_marginStart="161dp"
        android:layout_marginTop="250dp"
        android:layout_toEndOf="@+id/buttonArms"
        android:text="Abs" />

    <Button
        android:id="@+id/buttonLegs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonArms"
        android:layout_alignStart="@+id/imageView"
        android:layout_marginStart="-22dp"
        android:layout_marginTop="146dp"
        android:text="Legs" />

</RelativeLayout>